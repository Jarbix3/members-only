<%= simple_form_for(@post) do |f|%>

<div class="field">
    <div class="control">
        <%= f.input :title,
            label: "Title: ",
            input_html: { class: "string" },
            wrapper: false, label_html: {class: "label" },
            placeholder: "Enter a title",
            autofocus: true,
            :error => false%>

    </div>
    <% unless @post.errors[:title].empty?%>
        <p class="help is-danger">Please enter a title</p>
    <% end %>
</div>

<div class="field">
    <div class="control">
        <%= f.input :body,
            label: "Share your secrets: ",
            input_html: { class: "textarea" },
            wrapper: false, label_html: {class: "label" },
            placeholder: "Enter a text",
            :error => false%>
    </div>
    <% unless @post.errors[:body].empty?%>
        <p class="help is-danger">Please enter a story</p>
    <% end %>
</div>

<%= f.submit "Post your story", class: "button is primary"%>
<% end %>
