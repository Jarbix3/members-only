<%= simple_form_for(@post) do |f|%>

<div class="field">
    <div class="control">
        <%= f.input :title,
            label: "titulo:",
            input_html: { class: "string" },
            wrapper: false, label_html: {class: "label" },
            placeholder: "diego nos salvo y a la patria construyo",
            autofocus: true,
            :error => false%>

    </div>
    <% unless @post.errors[:title].empty?%>
        <p class="help is-danger">ponele titulo gracias</p>
    <% end %>
</div>
<br>
<div class="field">
    <div class="control">
        <%= f.input :body,
            label: "CUENTECUENTO: ",
            input_html: { class: "textarea" },
            wrapper: false, label_html: {class: "label" },
            placeholder: "Si tuvieses que elegir 3 personas para comer un asado, Â¿quienes serian?",
            :error => false%>
    </div>
    <% unless @post.errors[:body].empty?%>
        <p class="help is-danger">CONTATE ALGO</p>
    <% end %>
</div>
<br>

<%= f.submit "POSTEAR CUENTO", class: "button "%>

<br><br>

<%= link_to 'VOLVER A VER LOS CUENTOS', posts_path %>
<% end %>
